<%= simple_form_for(@sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :purchaser_name %>
    <%= f.input :item_description %>
    <%= f.input :item_price %>
    <%= f.input :purchase_count %>
    <%= f.input :merchant_adress %>
    <%= f.input :merchant_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
